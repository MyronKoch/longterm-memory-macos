# Longterm Memory System - Environment Configuration
# Copy this file to .env and customize for your setup

# Database Configuration
LONGTERM_MEMORY_DB=longterm_memory
LONGTERM_MEMORY_USER=your_username
LONGTERM_MEMORY_PASSWORD=
LONGTERM_MEMORY_HOST=localhost
LONGTERM_MEMORY_PORT=5432

# Backup Configuration
LONGTERM_MEMORY_BACKUP_DIR=$HOME/Documents/longterm-memory-backups

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=nomic-embed-text
