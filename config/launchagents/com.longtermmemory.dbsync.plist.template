<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.longtermmemory.dbsync</string>
    
    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>{{HOME}}/Documents/GitHub/longterm-memory-macos/scripts/sync_databases.sh</string>
